<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	app:contentPadding="4dp"
	app:cardCornerRadius="8dp"
	>
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		>
		<ImageView
			android:id="@+id/github_1062_avatar"
			android:layout_width="32dp"
			android:layout_height="32dp"
			android:layout_marginRight="4dp"
			android:layout_marginEnd="4dp"
			tools:src="@drawable/glide"
			tools:ignore="ContentDescription"
			/>

		<TextView
			android:id="@+id/github_1062_name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_toEndOf="@id/github_1062_avatar"
			android:layout_toRightOf="@id/github_1062_avatar"
			android:textStyle="bold"
			tools:text="User name"
			/>
		
		<TextView
			android:id="@+id/github_1062_message"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom"
			android:layout_below="@id/github_1062_name"
			android:layout_toEndOf="@id/github_1062_avatar"
			android:layout_toRightOf="@id/github_1062_avatar"
			tools:text="Html message text that could be overly long and wrap into multiple lines and may also contain images."
			/>
	</RelativeLayout>
</android.support.v7.widget.CardView>
